<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="500.0" prefWidth="600.0"
   xmlns="http://javafx.com/javafx/21"
   xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TextField fx:id="textFieldCustomerId" layoutX="92.0" layoutY="85.0" />
      <TextField fx:id="textFieldCustomerName" layoutX="92.0" layoutY="160.0" />
      <TextField fx:id="textFieldCardNumber" layoutX="92.0" layoutY="289.0" />
      <TextField fx:id="textFieldCardType" layoutX="92.0" layoutY="362.0" />
      <Label fx:id="labelCustomerId" layoutX="14.0" layoutY="90.0" text="Customer ID" />
      <Label fx:id="labelCustomerName" layoutX="32.0" layoutY="165.0" text="Name" />
      <Label fx:id="labelCardNumber" layoutX="12.0" layoutY="294.0" text="Card number" />
      <Label fx:id="labelCardType" layoutX="21.0" layoutY="362.0" text="Card type" />
      <Label fx:id="labelResponse" layoutX="157.0" layoutY="429.0" text="Response" />
      <Button fx:id="buttonCustomerAdd" layoutX="391.0" layoutY="72.0" mnemonicParsing="false" onAction="#handleButtonCustomerAddAction" text="Add" />
      <Button fx:id="buttonCustomerFind" layoutX="406.0" layoutY="173.0" mnemonicParsing="false" onAction="#handleButtonCustomerFindAction" text="Find" />
      <Button fx:id="buttonCustomerDelete" layoutX="351.0" layoutY="276.0" mnemonicParsing="false" onAction="#handleButtonCustomerDeleteAction" text="Delete" />
      <Button fx:id="buttonCustomerSetName" layoutX="445.0" layoutY="277.0" mnemonicParsing="false" onAction="#handleButtonCustomerSetNameAction" text="Change name" />
      <!-- Credit Card Information Section-->
      <fx:define>
         <ToggleGroup fx:id="cardToggleGroup" />
      </fx:define>
      <RadioButton fx:id="radioButtonHasCard" layoutX="100.0" layoutY="215.0" mnemonicParsing="false" text="Has card" toggleGroup="$cardToggleGroup" />
      <RadioButton fx:id="radioButtonNoCard" layoutX="100.0" layoutY="250.0" mnemonicParsing="false" text="No card" toggleGroup="$cardToggleGroup" />
   </children>
</AnchorPane>
